<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Welt.LoginPage"
             BackgroundColor="#127ac7">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Fill" VerticalOptions="Center"> 

            <Label FontSize="30"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" Text="Welcome to Xamarin" TextColor="White"/>
            <Label FontSize="18" Text="Cross-platform apps made easy" HorizontalOptions="Center" TextColor="White"/>

            <Button Text="Login" BackgroundColor=" #1dabf0" TextColor="White"/>
            <Button Text="Register" BackgroundColor=" #1dabf0" TextColor="White"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>